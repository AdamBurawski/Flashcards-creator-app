---
import AuthLayout from "../../layouts/AuthLayout.astro";
import ResetPasswordForm from "../../components/auth/ResetPasswordForm";

// Pobranie tokena z URL
const token = Astro.url.searchParams.get("token") || undefined;
---

<AuthLayout title="Resetowanie hasła | Flashcards Creator">
  <Fragment slot="description"> Ustaw nowe hasło do swojego konta </Fragment>

  <div>
    <h1 class="text-xl font-semibold text-gray-900 text-center mb-6">Resetowanie hasła</h1>

    <ResetPasswordForm client:load token={token} />
  </div>

  <div slot="footer">
    <a href="/auth/login" class="font-medium text-primary hover:text-primary-dark"> Powrót do strony logowania </a>
  </div>
</AuthLayout>

